<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/main_fragment_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.example.calculator.MainFragment"
        tools:layout="@layout/fragment_main"/>

    <fragment
        android:id="@+id/additional_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:name="com.example.calculator.AdditionalKeysFragment"
        tools:layout="@layout/fragment_additional_keys"/>


</LinearLayout>